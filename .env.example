# SYNTON-DB Environment Variables
#
# Copy this file to .env and configure as needed.

# ========== Server Configuration ==========
# Host address to bind to (0.0.0.0 for all interfaces)
SYNTON_SERVER_HOST=0.0.0.0

# gRPC server port
SYNTON_SERVER_GRPC_PORT=50051

# REST API server port
SYNTON_SERVER_REST_PORT=8080

# ========== Storage Configuration ==========
# Enable/disable persistent storage
SYNTON_STORAGE_ENABLED=true

# RocksDB data directory
SYNTON_STORAGE_ROCKSDB_PATH=./data/rocksdb

# Lance data directory
SYNTON_STORAGE_LANCE_PATH=./data/lance

# ========== ML / Embedding Configuration ==========
# Enable ML features
SYNTON_ML_ENABLED=true

# Backend type: local, openai, ollama
SYNTON_ML_BACKEND=local

# Local model name (for local backend)
SYNTON_ML_LOCAL_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Device for local model: cpu, cuda, metal
SYNTON_ML_DEVICE=cpu

# Maximum sequence length
SYNTON_ML_MAX_LENGTH=512

# API endpoint for OpenAI/Ollama
SYNTON_ML_API_ENDPOINT=https://api.openai.com/v1

# API key (for OpenAI)
# SYNTON_ML_API_KEY=sk-...

# Model name for API backends
SYNTON_ML_API_MODEL=text-embedding-3-small

# Request timeout in seconds
SYNTON_ML_TIMEOUT_SECS=30

# Enable embedding cache
SYNTON_ML_CACHE_ENABLED=true

# Cache size
SYNTON_ML_CACHE_SIZE=10000

# ========== Logging Configuration ==========
# Log level: trace, debug, info, warn, error
SYNTON_LOG_LEVEL=info

# Enable JSON formatted logs
SYNTON_LOG_JSON_FORMAT=false

# ========== Graph-RAG Configuration ==========
# Maximum traversal depth
SYNTON_GRAPHRAG_MAX_TRAVERSAL_DEPTH=3

# Maximum results from hybrid search
SYNTON_GRAPHRAG_MAX_RESULTS=10

# Vector weight (0.0-1.0)
SYNTON_GRAPHRAG_VECTOR_WEIGHT=0.7

# Graph weight (0.0-1.0)
SYNTON_GRAPHRAG_GRAPH_WEIGHT=0.3
